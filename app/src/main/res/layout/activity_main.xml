<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ItemView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.http1it.myview2.ItemView
        android:id="@+id/ivFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        ItemView:leftText="这是第一条左边"
        ItemView:showArrow="true"></com.http1it.myview2.ItemView>

    <com.http1it.myview2.ItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        ItemView:leftText="这是第二条右边"
        ItemView:rightText="这里显示右边内容"
        ItemView:showArrow="true"></com.http1it.myview2.ItemView>

    <com.http1it.myview2.ItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        ItemView:leftText="这是第三条，不显示右边"
        ItemView:showArrow="false"></com.http1it.myview2.ItemView>

</LinearLayout>